{
  "name": "tsc-mixed",
  "version": "0.0.0",
  "description": "Run tsc with a configuration and files.",
  "author": "Marc Bouchenoire",
  "license": "MIT",
  "repository": "https://github.com/bouchenoiremarc/tsc-mixed",
  "keywords": [
    "typescript",
    "cli",
    "mixed",
    "staged"
  ],
  "files": [
    "src",
    "dist"
  ],
  "source": "./src/index.ts",
  "bin": "./dist/tsc-mixed.js",
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "eslint --fix",
      "yarn tsc-mixed --project tsconfig.json",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "scripts": {
    "build": "microbundle  --tsconfig tsconfig.build.json --format cjs --target node --sourcemap false",
    "tsc-mixed": "node -r esbuild-register src/index.ts",
    "clean": "jest --clearCache && rimraf node_modules",
    "lint": "yarn lint:eslint && yarn lint:tsc && yarn lint:prettier",
    "lint:eslint": "eslint '**/*.{ts,tsx}' --fix",
    "lint:prettier": "prettier --write '**/*.{ts,tsx}' --loglevel silent",
    "lint:tsc": "tsc --project tsconfig.json",
    "prepare": "rimraf dist && yarn build",
    "release": "yarn login && np",
    "test": "jest"
  },
  "devDependencies": {
    "@bouchenoiremarc/eslint-config": "^1.5.2",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.4.3",
    "@types/rimraf": "^3.0.1",
    "@types/yargs-parser": "^20.2.1",
    "chokidar": "^3.5.2",
    "esbuild-register": "^2.6.0",
    "eslint": "^7.31.0",
    "husky": "4.3.8",
    "jest": "^27.0.6",
    "jest-extended": "^0.11.5",
    "lint-staged": "^11.0.1",
    "load-json-file": "^6.2.0",
    "microbundle": "^0.13.3",
    "np": "^7.5.0",
    "prettier": "^2.3.2",
    "tempy": "^1.0.1",
    "ts-jest": "^27.0.4",
    "typescript": "^4.3.5"
  },
  "peerDependencies": {
    "typescript": ">=1.8.0"
  },
  "dependencies": {
    "execa": "^5.1.1",
    "exit-hook": "^2.2.1",
    "rimraf": "^3.0.2",
    "write-json-file": "^4.3.0",
    "yargs-parser": "^20.2.9"
  }
}
